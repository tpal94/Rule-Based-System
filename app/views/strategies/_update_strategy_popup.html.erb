<div class="modal fade" id="myUpdateModal" role="dialog">
  <div class="modal-dialog">
  <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Filter by Tags</h4>
      </div>
      <div class="modal-body" style="height: 200px;">
        <%= form_for :strategy, url: strategy_path(@strategy), method: :patch, html: {class: "new_strategy"} do |f|%> 
          <div class="form-group" style="padding:20px;">
            <label class="control-label col-sm-4" >Enter Name</label>
            <div class="col-sm-8">
              <%= text_field_tag "strategy[name]","", class: "form-control", id: "name"%>
            </div>
          </div>
          <div class="form-group" style="padding:20px;">
            <label class="control-label col-sm-4" >Enter Tag</label>
            <div class="col-sm-8">
              <%= text_field_tag "strategy[tag]","", class: "form-control", id: "tag"%>
            </div>
          </div>
          <div class="form-group" style="padding:20px;">
            <div class="col-sm-4" ></div>
            <div class="col-sm-8">
              <%= f.submit "Save", class: "btn btn-primary", style: "float: left"%>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>