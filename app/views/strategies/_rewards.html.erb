<div class="dragged-item " id="dragged-item" style="" >	
	<div class="col-lg-12" style="padding-top:20px; ">	
		<div class="items" >
			<span  style=" float: left" class="col-lg-11">LOYAL CUSTOMER PROGRAMME</span> 
			<div class="" >	
				<img src="../../assets/img/sidebar_icon/time.png" data-toggle="collapse" data-target="#demo1" />
			</div>	
		</div>
		<div id="demo1" class="collapse in col-lg-12" style="style: padding:0px; font-weight: bold; margin-top:10px;"> 
			<div class="demo-collapse" style="padding:0px;">
				<span  style=" float: left" class="col-lg-11"><%= @rule.name %></span> 
				<div class="" >	
					<img src="../../assets/img/sidebar_icon/time.png" data-toggle="collapse" data-target="#demo11" />
				</div>	
			</div>
			<div id="demo11" class="collapse in col-lg-12" style="style: padding:0px; font-weight: bold; margin-top:10px;"> 
				<div class="demo-collapse" style="padding:0px;"> 
					<h4> Select any one below </h4>	
					<%= form_for :strategy_rules, url: rules_for_strategy_path, remote: true do |f|%>
						<div class="radio">      
							<label>
								<input type="radio" name="rules[rewards]" value="5">5 Points
							</label>    
						</div>    
						<div class="radio">      
							<label><input type="radio" name="rules[rewards]" value="4">4 Points</label>    
						</div>   
						<div class="radio">      
							<label><input type="radio" name="rules[rewards]" value="3">3 Points</label>    
						</div>	
						<div class="radio">      
							<label><input type="radio" name="rules[rewards]" value="2">2 Points</label>    
						</div>	
						<div class="radio">      
							<label><input type="radio" name="rules[rewards]" value="1">1 Points</label>    
						</div> 
						<%= hidden_field_tag "strategy_id", @strategy.id%>
						<%= hidden_field_tag "rule_id", @rule.id%>
						<%= f.submit "Add", class: "btn btn-info"%>
					<% end %>
				</div>
			</div>	
		</div>
	</div> 
</div>